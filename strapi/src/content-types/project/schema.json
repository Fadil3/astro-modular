{
  "kind": "collectionType",
  "collectionName": "projects",
  "info": {
    "singularName": "project",
    "pluralName": "projects",
    "displayName": "Project",
    "description": "Projects / Portfolio items"
  },
  "options": { "draftAndPublish": true },
  "pluginOptions": { "i18n": { "localized": false } },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": { "type": "text" },
    "content": { "type": "text" },
    "date": { "type": "datetime" },
    "categories": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "api::project-category.project-category",
      "inversedBy": "projects"
    },
    "repositoryUrl": { "type": "string" },
    "demoUrl": { "type": "string" },
    "status": { "type": "string" },
    "coverImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "coverImageAlt": { "type": "string" },
    "hideCoverImage": { "type": "boolean", "default": false },
    "hideTOC": { "type": "boolean", "default": false },
    "featured": { "type": "boolean", "default": false },
    "aliases": {
      "type": "component",
      "repeatable": true,
      "component": "shared.alias"
    }
  }
}
