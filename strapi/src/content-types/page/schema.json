{
  "kind": "collectionType",
  "collectionName": "pages",
  "info": {
    "singularName": "page",
    "pluralName": "pages",
    "displayName": "Page",
    "description": "Static pages (Markdown)"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": { "localized": false }
  },
  "attributes": {
    "title": { "type": "string", "required": true },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": true,
      "unique": true
    },
    "description": { "type": "text" },
    "content": { "type": "text" },
    "lastModified": { "type": "date" },
    "coverImage": {
      "type": "media",
      "allowedTypes": ["images"],
      "multiple": false
    },
    "coverImageAlt": { "type": "string" },
    "hideCoverImage": { "type": "boolean", "default": false },
    "hideTOC": { "type": "boolean", "default": false },
    "noIndex": { "type": "boolean", "default": false },
    "aliases": {
      "type": "component",
      "repeatable": true,
      "component": "shared.alias"
    }
  }
}
